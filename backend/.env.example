# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-budget-forecasting

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@aibudgetforecasting.com

# AI/ML Configuration
TENSORFLOW_MODEL_PATH=./models/
FORECAST_ACCURACY_THRESHOLD=0.85
ANOMALY_DETECTION_SENSITIVITY=0.1

# External APIs (if needed)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINANCIAL_DATA_API_KEY=your-financial-data-api-key

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log